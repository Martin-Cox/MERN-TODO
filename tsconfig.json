{
	"compilerOptions": {
		"baseUrl": ".",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"jsx": "react",
		"declaration": false,
		"paths": {
			"*": [ "src/*" ]
		},
		"lib": ["es2017", "dom"],
		"experimentalDecorators": true
	},
	"compileOnSave": true,
	"exclude": [
		"node_modules",
		"vendor"
	],
	"types": ["node"]
}