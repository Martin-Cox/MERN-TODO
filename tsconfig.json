{
	"compilerOptions": {
		"baseUrl": ".",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "es2018",
		"module": "amd",
		"moduleResolution": "node",
		"jsx": "react",
		"declaration": false,
		"paths": {
			"*": [ "src/*" ]
		},
		"lib": ["es2018", "dom"],
		"experimentalDecorators": true
	},
	"compileOnSave": true,
	"exclude": [
		"node_modules",
		"vendor"
	],
	"types": [
		"chrome",
		"node"
	]
}